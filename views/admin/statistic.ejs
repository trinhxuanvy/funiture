<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="/stylesheets/css/flaticon.css" />
    <link rel="stylesheet" href="/stylesheets/css/themify-icons.css" />
    <link rel="stylesheet" href="/stylesheets/css/admin/custom.css" />
    <link rel="stylesheet" href="/stylesheets/css/admin/style.css" />
  </head>

  <body>
    <div class="wrapper">
      <%- include ("./share/sidebar.ejs") %>
      <div class="wrapper__main" id="main">
        <div class="wrapper__main__header">
          <a href="/admin/admins"
            ><span class="wrapper__main__header__title">Statistic</span></a
          >
          <div class="wrapper__main__header__function">
            <form action="/admin/statistic" method="get">
              <input
                type="text"
                id="search"
                name="search"
                placeholder="Search"
              />
              <button type="submit">
                <i class="ti-search"></i>
              </button>
            </form>
          </div>
          <div class="menu-toggle">
            <button id="menu-toggle" class="btn btn-secondary">
              <i class="fa fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        <div class="wrapper__main__content">
          <div class="container-fluid" style="padding: 32px">
            <div class="wrapper__main__content__table">
              <div class="wrapper__main__content__table__header">
                <div class="row">
                  <div class="col-6">
                    <p style="font-size: 24px">Statistic</p>
                  </div>
                  <div class="col-6">
                    <div class="d-flex justify-content-end">
                      <div class="btn-group" id="btnGroupStatistic">
                        <button class="btn btn-orange btn-active" value="day">
                          Day
                        </button>
                        <button class="btn btn-orange" value="month">
                          Month
                        </button>
                        <button class="btn btn-orange" value="year">
                          Year
                        </button>
                      </div>
                      <div class="position-relative mx-2">
                        <button class="btn btn-dark" id="configStatistic">
                          Config
                        </button>
                        <div id="formStatistic">
                          <div id="dayStatistic">
                            <form id="formDay" action="" method="post">
                              <div class="form-item">
                                <span class="input-title">Start Day</span>
                                <div class="d-flex position-relative">
                                  <input
                                    type="text"
                                    value=""
                                    name="startDate"
                                    class="form-control"
                                    id="startDay"
                                    required
                                    autocomplete="off"
                                  />
                                  <label for="startDate">
                                    <span class="input-group-addon">
                                      <span class="input-group-text d-block">
                                        <i class="fa fa-calendar"></i>
                                      </span>
                                    </span>
                                  </label>
                                </div>
                              </div>
                              <div class="form-item mt-2">
                                <span class="input-title">End Day</span>
                                <div class="d-flex position-relative">
                                  <input
                                    type="text"
                                    value=""
                                    name="endDate"
                                    class="form-control"
                                    id="endDay"
                                    required
                                    autocomplete="off"
                                  />
                                  <label for="startDate">
                                    <span class="input-group-addon">
                                      <span class="input-group-text d-block">
                                        <i class="fa fa-calendar"></i>
                                      </span>
                                    </span>
                                  </label>
                                </div>
                              </div>
                              <button
                                class="btn btn-orange mt-5 d-block mx-auto"
                                type="submit"
                                id="btnSubmitStatistic"
                              >
                                Analyses
                              </button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div class="chart">
                <div class="loading">
                  <span class="loader"></span>
                </div>
                <div id="chartContainer"></div>
              </div>
              <div class="wrapper__main__content__table__footer mt-4">
                <span style="font-size: 12px; font-weight: bolder"
                  >Range: <span class="show-range"></span
                ></span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <%- include ("./share/scripts.ejs") %>
  </body>
</html>
