<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="/stylesheets/css/flaticon.css" />
    <link rel="stylesheet" href="/stylesheets/css/themify-icons.css" />
    <link rel="stylesheet" href="/stylesheets/css/admin/custom.css" />
    <link rel="stylesheet" href="/stylesheets/css/admin/style.css" />
  </head>

  <body>
    <div class="wrapper">
      <%- include ("./share/sidebar.ejs") %>
      <div class="wrapper__main" id="main">
        <div class="wrapper__main__header">
          <a href="/admin/admins"
            ><span class="wrapper__main__header__title">Admin List</span></a
          >
          <div class="wrapper__main__header__function">
            <form action="/admin/admins" method="get">
              <input
                type="text"
                id="search"
                name="search"
                placeholder="Search"
              />
              <button type="submit">
                <i class="ti-search"></i>
              </button>
            </form>
          </div>
          <div class="menu-toggle">
            <button id="menu-toggle" class="btn btn-secondary">
              <i class="fa fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        <div class="wrapper__main__content">
          <div class="container-fluid" style="padding: 32px">
            <div class="wrapper__main__content__table">
              <div class="wrapper__main__content__table__header">
                <div class="row">
                  <div class="col-6">
                    <p style="font-size: 24px">Admin List</p>
                  </div>
                  <div class="col-6">
                    <button
                      type="button"
                      class="btn btn-orange text-white d-block"
                      style="margin-left: auto"
                      data-bs-toggle="modal"
                      data-bs-target="#addUserModal"
                    >
                      <em class="ti-plus"></em> Add
                    </button>
                  </div>
                </div>
              </div>
              <div class="table-responsive-xxl">
                <table class="table table-striped table-bordered">
                  <thead>
                    <tr>
                      <th style="text-align: center; min-width: 150px">
                        <em class="ti-settings"></em>
                      </th>
                      <th style="min-width: 150px">Avatar</th>
                      <th style="min-width: 300px">Name</th>
                      <th style="min-width: 200px">Identity Card</th>
                      <th style="min-width: 200px">Username</th>
                      <th style="min-width: 200px">Email</th>
                      <th style="min-width: 150px">Phone</th>
                      <th style="min-width: 300px">Address</th>
                      <th style="min-width: 250px">Date Of Birth</th>
                      <!-- <th style="min-width: 150px">Level</th> -->
                    </tr>
                  </thead>
                  <tbody>
                    <% admin.forEach(item => { %>
                    <tr>
                      <td align="center">
                        <a
                          href="/admin/admins/<%= item._id %>/reset"
                          class="btn btn-light"
                          ><em class="ti-reload"></em
                        ></a>
                        <a href="" class="btn btn-danger"
                          ><em class="ti-trash"></em
                        ></a>
                      </td>
                      <td><img src="<%= item.avatarLink %>" alt="" /></td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.adminName %>"
                            value="<%= item.adminName %>"
                            placeholder="Enter name"
                            name="<%= adminModel.adminName %>"
                            required
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.identityCard %>"
                            value="<%= item.identityCard %>"
                            placeholder="Enter identity card"
                            name="<%= adminModel.identityCard %>"
                            required
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.username %>"
                            value="<%= item.username %>"
                            placeholder="Enter identity card"
                            name="<%= adminModel.username %>"
                            required
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.email %>"
                            value="<%= item.email %>"
                            placeholder="Enter email"
                            name="<%= adminModel.email %>"
                            required
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.phone %>"
                            value="<%= item.phone %>"
                            placeholder="Enter email"
                            name="<%= adminModel.phone %>"
                            required
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.address %>"
                            value="<%= item.address %>"
                            placeholder="Enter email"
                            name="<%= adminModel.address %>"
                            required
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2">
                          <div class="input-group date datetimepicker" id="">
                            <input type="text" class="form-control"
                            placeholder="mm/dd/yyyy" name="<%=
                            adminModel.dateOfBirth %>" id="<%=
                            adminModel.dateOfBirth %>" value="<%= (new
                            Date(item.dateOfBirth)).toLocaleString("en-US", {
                            year: "numeric", month: "numeric", day: "numeric" })
                            %>" />
                            <span class="input-group-addon">
                              <span class="input-group-text d-block">
                                <i class="fa fa-calendar"></i>
                              </span>
                            </span>
                          </div>
                        </div>
                      </td>
                      <!-- <td>
                        <div class="mb-2 mt-2">
                          <input
                            type="text"
                            class="form-control"
                            id=""
                            value=""
                            placeholder="Enter email"
                            name=""
                            required
                          />
                        </div>
                      </td> -->
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>

              <div class="wrapper__main__content__table__footer mt-4">
                <div class="row align-items-center">
                  <div class="col-4">
                    Page <%= numPage %> of <%= totalPage %>
                  </div>
                  <div class="col-8">
                    <nav aria-label="Page navigation example">
                      <ul class="pagination justify-content-end m-auto">
                        <li class="page-item">
                          <form
                            action="/admin/admins<%= search %>"
                            method="post"
                          >
                            <% if (page <=1) { %>
                            <button
                              type="submit"
                              class="page-link text-dark btn disabled"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&laquo;</span>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= prevPage %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&laquo;</span>
                            </button>
                            <% } %>
                          </form>
                        </li>
                        <li class="page-item">
                          <form
                            action="/admin/admins<%= search %>"
                            method="post"
                          >
                            <% if (page < 1) { %>
                            <button
                              type="submit"
                              class="page-link text-dark btn disabled"
                              aria-label="Previous"
                            >
                              <%= page %>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= page %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn btn-orange text-white"
                              aria-label="Previous"
                            >
                              <%= page %>
                            </button>
                            <% } %>
                          </form>
                        </li>
                        <li class="page-item">
                          <form
                            action="/admin/admins<%= search %>"
                            method="post"
                          >
                            <% if (parseInt(page) + 1> totalPage) { %>
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            >
                              <%= parseInt(page) + 1 %>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= parseInt(page) + 1 %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <%= parseInt(page) + 1 %>
                            </button>
                            <% } %>
                          </form>
                        </li>
                        <li class="page-item">
                          <form
                            action="/admin/admins<%= search %>"
                            method="post"
                          >
                            <% if (parseInt(page) + 2> totalPage) { %>
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            >
                              <%= parseInt(page) + 2 %>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= parseInt(page) + 2 %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <%= parseInt(page) + 2 %>
                            </button>
                            <% } %>
                          </form>
                        </li>
                        <li class="page-item">
                          <form
                            action="/admin/admins<%= search %>"
                            method="post"
                          >
                            <% if (page>= totalPage) { %>
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&raquo;</span>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= nextPage %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&raquo;</span>
                            </button>
                            <% } %>
                          </form>
                        </li>
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>

              <!-- The Modal -->
              <div class="modal" id="addUserModal">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                      <h4 class="modal-title">Add Admin</h4>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                      ></button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                      <form
                        action="/admin/admins"
                        method="post"
                        class="was-validated"
                        enctype="multipart/form-data"
                      >
                        <div class="mb-3 mt-3 position-relative">
                          <label for="<%= adminModel.adminName %>">Name</label>
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.adminName %>"
                            placeholder="Enter name"
                            name="<%= adminModel.adminName %>"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please check your name.
                          </div>
                        </div>
                        <div class="mb-3 mt-3 position-relative">
                          <label for="<%= adminModel.identityCard %>"
                            >Identity Card</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.identityCard %>"
                            placeholder="Enter identity card"
                            name="<%= adminModel.identityCard %>"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please check your identity card.
                          </div>
                        </div>
                        <div class="mb-3 mt-3 position-relative">
                          <label for="<%= adminModel.email %>">Email</label>
                          <input
                            type="email"
                            class="form-control"
                            id="<%= adminModel.email %>"
                            placeholder="Enter email"
                            name="<%= adminModel.email %>"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please check your mail.
                          </div>
                        </div>
                        <div class="mb-3 mt-3 position-relative">
                          <label for="<%= adminModel.username %>"
                            >Username</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.username %>"
                            placeholder="Enter email"
                            name="<%= adminModel.username %>"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please check your username.
                          </div>
                        </div>
                        <div class="mb-3 mt-3 position-relative">
                          <label for="<%= adminModel.phone %>">Phone</label>
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.phone %>"
                            placeholder="Enter phone"
                            name="<%= adminModel.phone %>"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please check your phone.
                          </div>
                        </div>
                        <div class="mb-3 mt-3 position-relative">
                          <label for="<%= adminModel.address %>">Address</label>
                          <input
                            type="text"
                            class="form-control"
                            id="<%= adminModel.address %>"
                            placeholder="Enter address"
                            name="<%= adminModel.address %>"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please check your address.
                          </div>
                        </div>
                        <div class="mb-3 mt-3 position-relative">
                          <label for="<%= adminModel.dateOfBirth %>"
                            >Date Of Birth</label
                          >
                          <div class="input-group date datetimepicker" id="">
                            <input
                              type="text"
                              class="form-control"
                              placeholder="mm/dd/yyyy"
                              name="<%=
                            adminModel.dateOfBirth %>"
                              id="<%=
                            adminModel.dateOfBirth %>"
                              required
                            />
                            <span class="input-group-addon">
                              <span class="input-group-text d-block">
                                <i class="fa fa-calendar"></i>
                              </span>
                            </span>
                          </div>
                          <div class="invalid-tooltip">
                            Please check your date of birth.
                          </div>
                        </div>
                        <div class="position-relative">
                          <label for="<%= adminModel.avatarLink %>"
                            >Avatar</label
                          >
                          <input
                            style="margin-bottom: 8px"
                            type="file"
                            class="form-control"
                            id="<%= adminModel.avatarLink %>"
                            placeholder="Choose 1 file"
                            name="<%= adminModel.avatarLink %>"
                            required
                          />
                          <div class="invalid-tooltip">
                            Please choose 1 file
                          </div>
                        </div>
                        <button
                          type="submit"
                          class="btn btn-primary m-auto d-block"
                        >
                          Submit
                        </button>
                      </form>
                    </div>

                    <!-- Modal footer -->
                    <div class="modal-footer">
                      <button
                        type="button"
                        class="btn btn-danger"
                        data-bs-dismiss="modal"
                      >
                        Close
                      </button>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <%- include ("./share/scripts.ejs") %>
  </body>
</html>
