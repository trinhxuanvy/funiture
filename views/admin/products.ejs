<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>

    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.13.0/css/all.min.css"
      rel="stylesheet"
    />
    <!-- flaticon CSS -->
    <link rel="stylesheet" href="/stylesheets/css/flaticon.css" />
    <link rel="stylesheet" href="/stylesheets/css/themify-icons.css" />
    <link rel="stylesheet" href="/stylesheets/css/admin/custom.css" />
    <link rel="stylesheet" href="/stylesheets/css/admin/style.css" />
  </head>

  <body>
    <div class="wrapper">
      <%- include ("./share/sidebar.ejs") %>
      <div class="wrapper__main" id="main">
        <div class="wrapper__main__header">
          <a href="/admin/products" class="wrapper__main__header__title"
            >Product</a
          >
          <div class="wrapper__main__header__function">
            <form action="/admin/products" method="get">
              <input
                type="text"
                id="search"
                name="search"
                placeholder="Search"
              />
              <button type="submit">
                <i class="ti-search"></i>
              </button>
            </form>
          </div>
          <div class="menu-toggle">
            <button id="menu-toggle" class="btn btn-secondary">
              <i class="fa fa-bars" aria-hidden="true"></i>
            </button>
          </div>
        </div>
        <div class="wrapper__main__content" id="wrapperContent">
          <div class="container-fluid" style="padding: 32px">
            <div class="wrapper__main__content__table">
              <div class="wrapper__main__content__table__header">
                <div class="row">
                  <div class="col-6">
                    <p style="font-size: 24px">Product List</p>
                  </div>
                  <div
                    class="col-6 d-flex justify-content-end align-items-start"
                  >
                    <div class="sort-data position-relative">
                      <button
                        type="button"
                        class="btn btn-secondary d-inline-block"
                        id="btnSort"
                      >
                        <i class="fa fa-sort" aria-hidden="true"></i>
                        Sort
                      </button>
                      <div id="formSort" class="form-sort">
                        <form action="/admin/products" method="get">
                          <div class="form-sort-item">
                            <div class="sort-item-label">Sort</div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                type="radio"
                                name="sort"
                                value="asc"
                                id="flexRadioDefault1"
                                checked
                              />
                              <label
                                class="form-check-label"
                                for="flexRadioDefault1"
                              >
                                Asc<i
                                  class="fa fa-sort-alpha-asc"
                                  aria-hidden="true"
                                ></i>
                              </label>
                            </div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                type="radio"
                                name="sort"
                                value="desc"
                                id="flexRadioDefault2"
                              />
                              <label
                                class="form-check-label"
                                for="flexRadioDefault2"
                              >
                                Desc
                                <i
                                  class="fa fa-sort-alpha-desc"
                                  aria-hidden="true"
                                ></i>
                              </label>
                            </div>
                          </div>
                          <div class="form-sort-item">
                            <div class="sort-item-label">Following</div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                value="<%= prodModel.prodName %>"
                                type="radio"
                                id="defaultCheck1"
                                name="following"
                                checked
                              />
                              <label
                                class="form-check-label"
                                for="defaultCheck1"
                              >
                                Name
                              </label>
                            </div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                value="<%= prodModel.prodTypeName %>"
                                type="radio"
                                name="following"
                                id="defaultCheck2"
                              />
                              <label
                                class="form-check-label"
                                for="defaultCheck2"
                              >
                                Category
                              </label>
                            </div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                value="<%= prodModel.brandName %>"
                                type="radio"
                                name="following"
                                id="defaultCheck2"
                              />
                              <label
                                class="form-check-label"
                                for="defaultCheck2"
                              >
                                Brand
                              </label>
                            </div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                value="<%= prodModel.price %>"
                                type="radio"
                                name="following"
                                id="defaultCheck2"
                              />
                              <label
                                class="form-check-label"
                                for="defaultCheck2"
                              >
                                Price
                              </label>
                            </div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                value="<%= prodModel.amount %>"
                                type="radio"
                                name="following"
                                id="defaultCheck2"
                              />
                              <label
                                class="form-check-label"
                                for="defaultCheck2"
                              >
                                Amount
                              </label>
                            </div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                value="<%= prodModel.soldQuantity %>"
                                type="radio"
                                name="following"
                                id="defaultCheck2"
                              />
                              <label
                                class="form-check-label"
                                for="defaultCheck2"
                              >
                                Sold
                              </label>
                            </div>
                            <div class="form-check">
                              <input
                                class="form-check-input"
                                value="<%= prodModel.color %>"
                                type="radio"
                                name="following"
                                id="defaultCheck2"
                              />
                              <label
                                class="form-check-label"
                                for="defaultCheck2"
                              >
                                Color
                              </label>
                            </div>
                          </div>
                          <button class="btn btn-orange d-block mx-auto mt-3">
                            Apply
                          </button>
                        </form>
                      </div>
                    </div>
                    <div class="sort-data position-relative mx-2">
                      <button
                        type="button"
                        class="btn btn-success d-block"
                        style="margin-left: auto"
                        id="btnFilter"
                      >
                        <i class="fa fa-filter" aria-hidden="true"></i>
                        Filter
                      </button>
                      <div id="formFilter" class="form-sort">
                        <form action="/admin/products" method="get">
                          <div class="form-sort-item">
                            <div class="sort-item-label">Category</div>
                            <% for( let index = 0; index < categories.length; index++ ) { %>
                            <div class="form-check">
                                <input
                                  class="form-check-input"
                                  value="<%= categories[index].prodTypeName %>"
                                  type="checkbox"
                                  id="categoryCheck<%= index + 1 %>"
                                  name="category_<%= index + 1 %>"
                                />
                                <label
                                  class="form-check-label"
                                  for="categoryCheck<%= index + 1 %>"
                                >
                                  <%= categories[index].prodTypeName %> 
                                </label>
                              </div>
                            <% } %>         
                          </div>
                          <div class="form-sort-item">
                            <div class="sort-item-label">Brand</div>
                            <% for( let index = 0; index < brands.length; index++ ) { %>
                            <div class="form-check">
                                <input
                                  class="form-check-input"
                                  value="<%= brands[index].brandName %>"
                                  type="checkbox"
                                  id="brandCheck<%= index + 1 %>"
                                  name="brand_<%= index + 1 %>"
                                />
                                <label
                                  class="form-check-label"
                                  for="brandCheck<%= index + 1 %>"
                                >
                                  <%= brands[index].brandName %> 
                                </label>
                              </div>
                            <% } %>         
                          </div>
                          <button class="btn btn-orange d-block mx-auto mt-3">
                            Apply
                          </button>
                        </form>
                      </div>
                    </div>
                    <button
                      type="button"
                      class="btn btn-orange text-white d-inline-block"
                      data-bs-toggle="modal"
                      data-bs-target="#addModal"
                    >
                      <em class="ti-plus"></em> Add
                    </button>
                  </div>
                </div>
              </div>
              <div class="table-responsive-xxl">
                <table
                  class="table table-striped table-bordered"
                  id="table-model"
                >
                  <thead>
                    <tr>
                      <th style="text-align: center; min-width: 200px">
                        <em class="ti-settings"></em>
                      </th>
                      <th style="min-width: 200px">Primary Image</th>
                      <th style="min-width: 300px">Secondary Image</th>
                      <th style="min-width: 200px">Name</th>
                      <th style="min-width: 200px">Category</th>
                      <th style="min-width: 200px">Brand</th>
                      <th style="min-width: 150px">Price</th>
                      <th style="min-width: 150px">Amount</th>
                      <th style="min-width: 150px">Sold</th>
                      <th style="min-width: 150px">Color</th>
                      <th style="min-width: 150px">Width</th>
                      <th style="min-width: 150px">Height</th>
                      <th style="min-width: 150px">Depth</th>
                      <th style="min-width: 150px">Weight</th>
                      <th style="min-width: 300px">Description</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% products.forEach(item=> { %>
                    <tr class="tr-prod" <% if (!item.status) { %>
                      style="opacity: 0.5;" <% } %> id="<%= item._id %>">
                      <td align="center">
                        <div class="mt-2 mb-2">
                          <button
                            value="<%= item._id %>"
                            class="btn btn-danger btn-delete is-status"
                            title="Delete" >
                            <em class="ti-trash"></em>
                          </button>
                          <button
                            value="<%= item._id %>"
                            class="btn btn-secondary btn-lock is-status"
                            <% if (item.status) { %>
                            title="Lock" <% } else { %> title="Unlock" <% } %> >
                            <em class="ti-lock"></em>
                          </button>
                          <button
                            value="<%= item._id %>"
                            class="btn btn-success btn-preview-prod is-status"
                            title="Preview"
                          >
                            <em class="ti-eye"></em>
                          </button>
                        </div>
                      </td>
                      <td>
                        <label
                          for="<%= prodModel.primaryImage %>"
                          class="tb-image primary-image is-status"
                        >
                          <% item.prodImage.forEach(img=> { if (img.type == "1")
                          { %>
                          <img src="<%= img.imageLink %>" alt="" />
                          <%} }) %>
                          <input
                            type="file"
                            name="<%= prodModel.primaryImage %>"
                            id="<%= prodModel.primaryImage %>"
                            class="primary-image-input"
                          />
                        </label>
                      </td>
                      <td>
                        <label
                          class="tb-image secondary-image-1 is-status"
                          for="<%= prodModel.secondaryImage1 %>"
                        >
                          <% item.prodImage.forEach(img=> { if (img.type == "2")
                          { %>
                          <img src="<%= img.imageLink %>" alt="" />
                          <%} }) %>
                          <input
                            type="file"
                            class="secondary-image-input-1"
                            name="<%= prodModel.secondaryImage1 %>"
                            id="<%= prodModel.secondaryImage1 %>"
                          />
                        </label>
                        <label
                          class="tb-image secondary-image-2 is-status"
                          for="<%= prodModel.secondaryImage2 %>"
                        >
                          <% item.prodImage.forEach(img=> { if (img.type == "3")
                          { %>
                          <img src="<%= img.imageLink %>" alt="" />
                          <%} }) %>
                          <input
                            type="file"
                            class="secondary-image-input-2"
                            name="<%= prodModel.secondaryImage2 %>"
                            id="<%= prodModel.secondaryImage2 %>"
                          />
                        </label>
                        <label
                          class="tb-image secondary-image-3 is-status"
                          for="<%= prodModel.secondaryImage3 %>"
                        >
                          <% item.prodImage.forEach(img=> { if (img.type == "4")
                          { %>
                          <img src="<%= img.imageLink %>" alt="" />
                          <%} }) %>
                          <input
                            type="file"
                            class="secondary-image-input-3"
                            name="<%= prodModel.secondaryImage3 %>"
                            id="<%= prodModel.secondaryImage3 %>"
                          />
                        </label>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 form-group is-status">
                          <input
                            type="text"
                            class="form-control"
                            id="<%= prodModel.prodName %>"
                            value="<%= item.prodName %>"
                            placeholder="Enter name"
                            name="<%= prodModel.prodName %>"
                            required
                          />
                        </div>
                      </td>
                      <td>
                        <div class="is-status">
                          <select
                            class="mb-2 mt-2 form-control"
                            name="<%= prodModel.prodTypeId %>"
                            id="<%= prodModel.prodTypeId %>"
                          >
                            <option
                              style="visibility: hidden"
                              value="<%= item.prodTypeId %>"
                            >
                              <%= item.prodTypeName %>
                            </option>
                            <% categories.forEach(cate=> { %>
                            <option value="<%= cate._id %>">
                              <%= cate.prodTypeName %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </td>
                      <td>
                        <div class="is-status">
                          <select
                            class="mb-2 mt-2 form-control"
                            name="<%= prodModel.brandId %>"
                            id="<%= prodModel.brandId %>"
                          >
                            <option
                              style="visibility: hidden"
                              value="<%= item.brandId %>"
                            >
                              <%= item.brandName %>
                            </option>
                            <% brands.forEach(br=> { %>
                            <option value="<%= br._id %>">
                              <%= br.brandName %>
                            </option>
                            <% }) %>
                          </select>
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 is-status">
                          <input
                            type="number"
                            value="<%= item.price %>"
                            class="form-control"
                            id="<%= prodModel.price %>"
                            placeholder="Enter price"
                            name="<%= prodModel.price %>"
                            min="0"
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 is-status">
                          <input
                            type="number"
                            value="<%= item.amount %>"
                            class="form-control"
                            id="<%= prodModel.amount %>"
                            placeholder="Enter amount"
                            name="<%= prodModel.amount %>"
                            min="0"
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 is-status">
                          <input
                            type="number"
                            value="<%= item.soldQuantity %>"
                            class="form-control"
                            id="<%= prodModel.soldQuantity %>"
                            placeholder="Enter sold quantity"
                            name="<%= prodModel.soldQuantity %>"
                            min="0"
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 is-status">
                          <input
                            type="text"
                            value="<%= item.color %>"
                            class="form-control"
                            id="<%= prodModel.color %>"
                            placeholder="Enter color"
                            name="<%= prodModel.color %>"
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 is-status">
                          <input
                            type="number"
                            value="<%= item.width %>"
                            class="form-control"
                            id="<%= prodModel.width %>"
                            placeholder="Enter width"
                            name="<%= prodModel.width %>"
                            min="0"
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 is-status">
                          <input
                            type="number"
                            value="<%= item.height %>"
                            class="form-control"
                            id="<%= prodModel.height %>"
                            placeholder="Enter height"
                            name="<%= prodModel.height %>"
                            min="0"
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 is-status">
                          <input
                            type="number"
                            value="<%= item.depth %>"
                            class="form-control"
                            id="<%= prodModel.depth %>"
                            placeholder="Enter depth"
                            name="<%= prodModel.depth %>"
                            min="0"
                          />
                        </div>
                      </td>
                      <td>
                        <div class="mb-2 mt-2 is-status">
                          <input
                            type="number"
                            value="<%= item.weight %>"
                            class="form-control"
                            id="<%= prodModel.weight %>"
                            placeholder="Enter weight"
                            name="<%= prodModel.weight %>"
                            min="0"
                          />
                        </div>
                      </td>
                      <td style="font-size: 14px">
                        <div class="mb-2 mt-2 is-status">
                          <input
                            class="form-control"
                            id="<%= prodModel.description %>"
                            placeholder="Enter Description"
                            name="<%= prodModel.description %>"
                            value="<%= item.description %>"
                          />
                        </div>
                      </td>
                    </tr>
                    <% }) %>
                  </tbody>
                </table>
              </div>

              <div class="wrapper__main__content__table__footer mt-4">
                <div class="row align-items-center">
                  <div class="col-4">
                    Page <%= numPage %> of <%= totalPage %>
                  </div>
                  <div class="col-8">
                    <nav aria-label="Page navigation example">
                      <ul class="pagination justify-content-end m-auto">
                        <li class="page-item">
                          <form
                            action="/admin/products<%= urlStr %>"
                            method="post"
                          >
                            <% if (page <=1) { %>
                            <button
                              type="submit"
                              class="page-link text-dark btn disabled"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&laquo;</span>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= prevPage %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&laquo;</span>
                            </button>
                            <% } %>
                          </form>
                        </li>
                        <li class="page-item">
                          <form
                            action="/admin/products<%= urlStr %>"
                            method="post"
                          >
                            <% if (page < 1) { %>
                            <button
                              type="submit"
                              class="page-link text-dark btn disabled"
                              aria-label="Previous"
                            >
                              <%= page %>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= page %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn btn-orange text-white"
                              aria-label="Previous"
                            >
                              <%= page %>
                            </button>
                            <% } %>
                          </form>
                        </li>
                        <li class="page-item">
                          <form
                            action="/admin/products<%= urlStr %>"
                            method="post"
                          >
                            <% if (parseInt(page) + 1> totalPage) { %>
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            >
                              <%= parseInt(page) + 1 %>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= parseInt(page) + 1 %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <%= parseInt(page) + 1 %>
                            </button>
                            <% } %>
                          </form>
                        </li>
                        <li class="page-item">
                          <form
                            action="/admin/products<%= urlStr %>"
                            method="post"
                          >
                            <% if (parseInt(page) + 2> totalPage) { %>
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            >
                              <%= parseInt(page) + 2 %>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= parseInt(page) + 2 %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <%= parseInt(page) + 2 %>
                            </button>
                            <% } %>
                          </form>
                        </li>
                        <li class="page-item">
                          <form
                            action="/admin/products<%= urlStr %>"
                            method="post"
                          >
                            <% if (page>= totalPage) { %>
                            <button
                              type="submit"
                              class="page-link btn text-dark disabled"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&raquo;</span>
                            </button>
                            <% } else { %>
                            <input
                              type="text"
                              name="page"
                              id="page"
                              value="<%= nextPage %>"
                              style="display: none"
                            />
                            <button
                              type="submit"
                              class="page-link btn text-dark"
                              aria-label="Previous"
                            >
                              <span aria-hidden="true">&raquo;</span>
                            </button>
                            <% } %>
                          </form>
                        </li>
                      </ul>
                    </nav>
                  </div>
                </div>
              </div>

              <!-- The Modal Insert -->
              <div class="modal" id="addModal">
                <div class="modal-dialog">
                  <div class="modal-content">
                    <!-- Modal Header -->
                    <div class="modal-header">
                      <h4 class="modal-title">Product</h4>
                      <button
                        type="button"
                        class="btn-close"
                        data-bs-dismiss="modal"
                      ></button>
                    </div>

                    <!-- Modal body -->
                    <div class="modal-body">
                      <form
                        action="/admin/products"
                        id="formSubmit"
                        method="post"
                        enctype="multipart/form-data"
                      >
                        <fieldset>
                          <div class="mb-3 mt-3 position-relative">
                            <label for="prodName">Product Name</label>
                            <input
                              type="text"
                              class="form-control"
                              id="prodName"
                              placeholder="Enter name"
                              name="prodName"
                              required
                            />
                          </div>
                          <div class="mb-3 position-relative">
                            <label for="prodTypeId">Category</label>
                            <select
                              class="form-control"
                              name="prodTypeId"
                              id="prodTypeId"
                              required
                            >
                              <% categories.forEach(item=> { %>
                              <option value="<%= item._id %>">
                                <%= item.prodTypeName %>
                              </option>
                              <% }) %>
                            </select>
                          </div>
                          <div class="mb-3 position-relative">
                            <label for="brandId">Brand</label>
                            <select
                              class="form-control"
                              name="brandId"
                              id="brandId"
                              required
