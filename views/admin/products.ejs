<%- include ("./share/head.ejs") %>
    </head>

    <body>
        <div class="wrapper">
            <%- include ("./share/sidebar.ejs") %>
                <div class="wrapper__main" id="main">
                    <div class="wrapper__main__header">
                        <span class="wrapper__main__header__title">Product List</span>
                        <div class="wrapper__main__header__function">

                        </div>
                        <div class="menu-toggle">
                            <button id="menu-toggle" class="btn btn-secondary"><i class="fa fa-bars" aria-hidden="true"></i></button>
                        </div>
                    </div>
                    <div class="wrapper__main__content">
                        <div class="container-fluid" style="padding: 32px;">
                            <div class="wrapper__main__content__table">
                                <div class="wrapper__main__content__table__header">
                                    <div class="row">
                                        <div class="col-6">
                                            <p style="font-size: 24px;">Product List</p>
                                        </div>
                                        <div class="col-6">
                                            <button type="button" class="btn btn-success d-block" style="margin-left: auto;" data-bs-toggle="modal" data-bs-target="#addUserModal"><em class="ti-plus"></em> Add</button>
                                        </div>
                                    </div>
                                </div>
                                <div class="table-responsive-xxl">
                                    <table class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th style="text-align: center; min-width: 200px;"><em class="ti-settings"></em></th>
                                                <th style="min-width: 150px;">Primary Image</th>
                                                <th style="min-width: 300px;">Secondary Image</th>
                                                <th style="min-width: 200px;">Name</th>
                                                <th style="min-width: 200px;">Category</th>
                                                <th style="min-width: 150px;">Price</th>
                                                <th style="min-width: 150px;">Amount</th>
                                                <th style="min-width: 150px;">Sold</th>
                                                <th style="min-width: 150px;">Color</th>
                                                <th style="min-width: 150px;">Width</th>
                                                <th style="min-width: 150px;">Height</th>
                                                <th style="min-width: 150px;">Depth</th>
                                                <th style="min-width: 150px;">Weight</th>
                                                <th style="min-width: 300px;">Description</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% products.forEach(item => { %>
                                                <tr>
                                                    <td align="center">
                                                        <a href="" class="btn btn-light"><em class="ti-pencil"></em></a>
                                                        <a href="" class="btn btn-danger"><em class="ti-trash"></em></a>
                                                        <button value="" class="btn btn-success"><em class="ti-eye"></em></button>
                                                    </td>
                                                    <td><img src="/images/product/product_2.png" alt=""></td>
                                                    <td>
                                                        <img src="/images/product/product_2.png" alt="">
                                                        <img src="/images/product/product_3.png" alt="">
                                                        <img src="/images/product/product_4.png" alt="">
                                                    </td>
                                                    <td>
                                                        <%= item.prodName %>
                                                    </td>
                                                    <td>
                                                        <%= item.prodTypeName %>
                                                    </td>
                                                    <td>
                                                        <%= item.price %>
                                                    </td>
                                                    <td>
                                                        <%= item.amount %>
                                                    </td>
                                                    <td>
                                                        <%= item.soldQuantity %>
                                                    </td>
                                                    <td>
                                                        <%= item.color %>
                                                    </td>
                                                    <td>
                                                        <%= item.width %>
                                                    </td>
                                                    <td>
                                                        <%= item.height %>
                                                    </td>
                                                    <td>
                                                        <%= item.depth %>
                                                    </td>
                                                    <td>
                                                        <%= item.weight %>
                                                    </td>
                                                    <td style="font-size: 14px;">
                                                        <%= item.description %>
                                                    </td>
                                                </tr>
                                                <% }) %>

                                        </tbody>
                                    </table>
                                </div>

                                <div class="wrapper__main__content__table__footer mt-4">
                                    <div class="row align-items-center">
                                        <div class="col-4">
                                            Page 1 of 5
                                        </div>
                                        <div class="col-8">
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination justify-content-end m-auto">
                                                    <li class="page-item">
                                                        <a class="page-link" href="#" aria-label="Previous">
                                                            <span aria-hidden="true">&laquo;</span>
                                                        </a>
                                                    </li>
                                                    <li class="page-item"><a class="page-link" href="#">1</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                                    <li class="page-item">
                                                        <a class="page-link" href="#" aria-label="Next">
                                                            <span aria-hidden="true">&raquo;</span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </nav>
                                        </div>
                                    </div>
                                </div>

                                <!-- The Modal -->
                                <div class="modal" id="addUserModal">
                                    <div class="modal-dialog">
                                        <div class="modal-content">

                                            <!-- Modal Header -->
                                            <div class="modal-header">
                                                <h4 class="modal-title">Add Product</h4>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                            </div>

                                            <!-- Modal body -->
                                            <div class="modal-body">
                                                <form action="/admin/products" method="post" class="was-validated">
                                                    <div class="mb-3 mt-3 position-relative">
                                                        <label for="prodName">Product Name</label>
                                                        <input type="text" class="form-control" id="prodName" placeholder="Enter name" name="prodName">
                                                        <div class="invalid-tooltip">Please check product name.</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="prodTypeId">Category</label>
                                                        <select class="form-control" name="prodTypeId" id="prodTypeId">
                                                            <% categories.forEach(item => { %>
                                                                <option value="<%= item._id %>"><%= item.prodTypeName %></option>
                                                            <% }) %>
                                                        </select>
                                                        <div class="invalid-tooltip">Please check category</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="price">Price</label>
                                                        <input type="number" class="form-control" id="price" placeholder="Enter price" name="price">
                                                        <div class="invalid-tooltip">Please check price</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="amount">Amount</label>
                                                        <input type="number" class="form-control" id="amount" placeholder="Enter amount" name="amount">
                                                        <div class="invalid-tooltip">Please check amount</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="primaryImage">Primary Image</label>
                                                        <input type="file" class="form-control" id="primaryImage" placeholder="Choose 1 file" name="primaryImage">
                                                        <div class="invalid-tooltip">Please choose 1 file</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="">Secondary Image</label>
                                                        <input style="margin-bottom: 8px;" type="file" class="form-control" id="secondaryImage_1" placeholder="Choose 1 file" name="secondaryImage_1">
                                                        <input style="margin-bottom: 8px;" type="file" class="form-control" id="secondaryImage_2" placeholder="Choose 1 file" name="secondaryImage_2">
                                                        <input style="margin-bottom: 8px;" type="file" class="form-control" id="secondaryImage_3" placeholder="Choose 1 file" name="secondaryImage_3">
                                                        <div class="invalid-tooltip">Please choose files</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="color">Color</label>
                                                        <input type="text" class="form-control" id="color" placeholder="Enter color" name="color">
                                                        <div class="invalid-tooltip">Please check color</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="width">Width</label>
                                                        <input type="number" class="form-control" id="width" placeholder="Enter width" name="width">
                                                        <div class="invalid-tooltip">Please check width</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="height">Height</label>
                                                        <input type="number" class="form-control" id="height" placeholder="Enter height" name="height">
                                                        <div class="invalid-tooltip">Please check height</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="depth">Depth</label>
                                                        <input type="number" class="form-control" id="depth" placeholder="Enter depth" name="depth">
                                                        <div class="invalid-tooltip">Please check depth</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="weight">Weight</label>
                                                        <input type="number" class="form-control" id="weight" placeholder="Enter weight" name="weight">
                                                        <div class="invalid-tooltip">Please check weight</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="soldQuantity">Sold</label>
                                                        <input type="number" class="form-control" id="soldQuantity" placeholder="Enter Sold Quantity" name="soldQuantity">
                                                        <div class="invalid-tooltip">Please check Sold Quantity</div>
                                                    </div>
                                                    <div class="mb-3 position-relative">
                                                        <label for="description">Description</label>
                                                        <textarea class="form-control" id="description" placeholder="Enter Description" name="description"></textarea>
                                                        <div class="invalid-tooltip">Please check Description</div>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary m-auto d-block">Submit</button>
                                                </form>
                                            </div>

                                            <!-- Modal footer -->
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--================Single Product Area =================-->
                <div class="product_image_area section_padding" id="product_image_area" style="display: none;">
                    <div class="container">
                        <div class="row s_product_inner justify-content-between">
                            <div class="col-lg-7 col-xl-7">
                                <div class="product_slider_img">
                                    <div id="vertical">
                                        <div data-thumb="/images/product/single-product/product_1.png">
                                            <img src="/images/product/single-product/product_1.png" />
                                        </div>
                                        <div data-thumb="/images/product/single-product/product_1.png">
                                            <img src="/images/product/single-product/product_1.png" />
                                        </div>
                                        <div data-thumb="/images/product/single-product/product_1.png">
                                            <img src="/images/product/single-product/product_1.png" />
                                        </div>
                                        <div data-thumb="/images/product/single-product/product_1.png">
                                            <img src="/images/product/single-product/product_1.png" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-5 col-xl-4">
                                <div class="s_product_text">
                                    <h5>previous <span>|</span> next</h5>
                                    <h3>Faded SkyBlu Denim Jeans</h3>
                                    <h2>$149.99</h2>
                                    <ul class="list">
                                        <li>
                                            <a class="active" href="#">
                                                <span>Category</span> : Household</a>
                                        </li>
                                        <li>
                                            <a href="#"> <span>Availibility</span> : In Stock</a>
                                        </li>
                                    </ul>
                                    <p>
                                        First replenish living. Creepeth image image. Creeping can't, won't called. Two fruitful let days signs sea together all land fly subdue
                                    </p>
                                    <div class="card_area d-flex justify-content-between align-items-center">
                                        <div class="product_count">
                                            <span class="inumber-decrement"> <i class="ti-minus"></i></span>
                                            <input class="input-number" type="text" value="1" min="0" max="10">
                                            <span class="number-increment"> <i class="ti-plus"></i></span>
                                        </div>
                                        <a href="#" class="btn_3">add to cart</a>
                                        <a href="#" class="like_us"> <i class="ti-heart"></i> </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="product-single-close">
                        <i class="ti-close" id="product-single-close"></i>
                    </div>
                </div>
        </div>

        <%- include ("./share/scripts.ejs") %>
    </body>

    </html>