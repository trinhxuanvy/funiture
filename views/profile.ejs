<%- include ("share/head") %>
</head>
<body>
  <!--::header part start::-->
  <%- include ("share/menu-top.ejs") %>
  <%- include ("share/message.ejs") %>
  <!-- Header part end-->

  <!--================Home Banner Area =================-->
  <!-- breadcrumb start-->
  <section class="breadcrumb breadcrumb_bg">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="breadcrumb_iner">
            <div class="breadcrumb_iner_item">
              <h2>Shop Category</h2>
              <p>Home <span>-</span> Shop Category</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- breadcrumb start-->

  <!--================login_part Area =================-->
  <section class="login_part padding_top">
    <div class="container">
      <div class="row align-items-center">
        <div class="col-lg-12 col-md-12">
          <div class="login_part_form">
            <div class="login_part_form_iner">
              <div class="section_tittle text-center">
                <h3>
                  Manage Your Account And Shipping Feld
                </h3>
              </div>
              <form class="row contact_form" action="/update/customer" method="post">
                <div class="col-md-6 form-group p_star">
                    <label for="<%= cusModel.cusName %>" class="form-label"
                      >Full Name</label>
                    <input
                        type="text"
                        class="form-control"
                        id="<%= cusModel.cusName %>"
                        name="<%= cusModel.cusName %>"
                        value="<%= user.cusName %>"
                        required
                    />
                </div>
                <div class="col-md-6 form-group p_star">
                    <label for="<%= cusModel.phone %>" class="form-label"
                      >Phone</label>
                    <input
                        type="text"
                        class="form-control"
                        id="<%= cusModel.phone %>"
                        name="<%= cusModel.phone %>"
                        value="<%= user.phone %>"
                        required
                    />
                </div>
                <div class="col-md-6 form-group p_star">
                  <label for="<%= cusModel.email %>" class="form-label"
                    >Mail</label>
                  <input
                      type="mail"
                      class="form-control"
                      id="<%= cusModel.email %>"
                      name="<%= cusModel.email %>"
                      value="<%= user.email %>"
                      required
                  />
                </div>
                <div class="col-md-6 form-group p_star">
                    <label for="<%= cusModel.dateOfBirth %>" class="form-label"
                      >Date Of Birth</label>
                      <div class="input-group date datetimepicker" id="">
                        <input type="text" class="form-control"
                        placeholder="mm/dd/yyyy" name="<%=
                        cusModel.dateOfBirth %>" id="<%=
                        cusModel.dateOfBirth %>" value="<%= (new
                        Date(user.dateOfBirth)).toLocaleString("en-US", { year:
                        "numeric", month: "numeric", day: "numeric" }) %>" />
                        <span class="input-group-addon">
                          <span class="input-group-text d-block">
                            <i class="fa fa-calendar"></i>
                          </span>
                        </span>
                      </div>
                  </div>
                <div class="col-md-6 form-group p_star">
                  <label for="vietNamProvinces" class="form-label"
                    >Provinces</label>
                  <select  name="<%= cusModel.province %>" class="country_select form-control" id="vietNamProvinces">
                    <% if (user.province) { %>
                      <option class="list-option" value="<%= user.province %>"><%= user.province %></option>
                    <% } %> 
                  </select>
                </div>
                <div class="col-md-6 form-group p_star">
                  <label for="vietNamDistrict" class="form-label"
                  >District</label>
                  <select name="<%= cusModel.district %>" class="country_select form-control" id="vietNamDistrict">
                    <% if (user.district) { %>
                      <option class="list-option" value="<%= user.district %>"><%= user.district %></option>
                    <% } %> 
                  </select>
                </div>
                <div class="col-md-6 form-group p_star">
                  <label for="vietNamDistrict" class="form-label"
                  >Commune</label>
                  <select name="commune" class="country_select form-control" id="vietNamCommune">
                    <% if (user.commune) { %>
                      <option class="list-option" value="<%= user.commune %>"><%= user.commune %></option>
                    <% } %> 
                  </select>
                </div>
                <div class="col-md-6 form-group p_star">
                  <label for="adress" class="form-label">Address</label>
                  <input name="<%= cusModel.address %>" id="<%= cusModel.address %>" value="<%= user.address %>" type="text" class="form-control" />
                </div>
                <div class="col-md-12 form-group">
                  <button type="submit" id="Submitbtn" value="submit" class="btn_3">
                    Update profile  
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================login_part end =================-->

  <!--::footer_part start::-->
  <%- include ("share/footer.ejs") %>

  <!--::javascripts:: -->
  <%- include ("share/scripts.ejs") %>
</body>
</html>
