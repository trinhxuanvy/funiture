<%- include ("share/head") %>
</head>

<body>
  <!--::header part start::-->
  <%- include ("share/menu-top.ejs") %>
  <!-- Header part end-->

  <!--================Home Banner Area =================-->
  <!-- breadcrumb start-->
  <section class="breadcrumb breadcrumb_bg">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <div class="breadcrumb_iner">
            <div class="breadcrumb_iner_item">
              <h2>Producta Checkout</h2>
              <p>Home <span>-</span> Shop Single</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!-- breadcrumb start-->

  <!--================Checkout Area =================-->
  <section class="checkout_area padding_top">
    <div class="container">
      <div class="billing_details">
        <div class="row">
          <div class="col-lg-8">
            <h3>Billing Details</h3>
            <form class="row contact_form" action="#" method="post" novalidate="novalidate">
              <div class="col-md-6 form-group p_star">
                <label for="cusName" class="form-label"
                  >Full Name</label>
                <input type="text" class="form-control" value="<%= user.cusName %>" id="cusName" name="cusName" required/>
              </div>
              <div class="col-md-6 form-group p_star">
                <label for="email" class="form-label"
                  >Email</label>
                <input type="text" class="form-control" value="<%= user.email %>" id="email" name="email" required/>
              </div>
              <div class="col-md-6 form-group p_star">
                <label for="phone" class="form-label"
                  >Phone</label>
                <input type="text" class="form-control" value="<%= user.phone %>" id="phone" name="phone" required/>
              </div>
              <div class="col-md-6 form-group p_star">
                <label for="vietNamProvinces" class="form-label"
                >Provinces</label>
                <select class="country_select form-control" id="vietNamProvinces">
                </select>
              </div>
              <div class="col-md-6 form-group p_star">
                <label for="vietNamDistrict" class="form-label"
                >District</label>
                <select class="country_select form-control" id="vietNamDistrict">
                </select>
              </div>
              <div class="col-md-6 form-group p_star">
                <label for="vietNamCommune" class="form-label"
                >Commune</label>
                <select class="country_select form-control" id="vietNamCommune">
                </select>
              </div>
              <div class="col-md-12 form-group">
                <label for="adress" class="form-label"
                >Address</label>
                <input type="text" class="form-control" id="adress" name="adress"/>
              </div>
              <div class="col-md-12 form-group">
                <div class="cupon_area">
                  <div class="check_title">
                    <h2>Have a coupon?
                      <a href="#" data-bs-toggle="modal" data-bs-target="#addModal">Click here to enter your code</a>
                    </h2>
                  </div>
                </div>
              </div>
              <div class="col-md-12 form-group">
                <div class="creat_account">
                  <h3>Shipping Details</h3>
                  <!-- <input type="checkbox" id="f-option3" name="selector" />
                  <label for="f-option3">Ship to a different address?</label> -->
                </div>
                <textarea class="form-control" name="message" id="message" rows="1"
                  placeholder="Order Notes"></textarea>
              </div>
            </form>
          </div>
          <div class="col-lg-4">
            <div class="order_box">
              <h2>Your Order</h2>
              <ul class="list">
                <li>
                  <a href="#">Product
                    <span>Total</span>
                  </a>
                </li>
                <% cartDetails.forEach(cartDetail => { %>
                  <li>
                    <a href="/products/<%= cartDetail.productId %>"><%= cartDetail.productName %> 
                      <span class="middle">x <%= cartDetail.amount %></span>
                      <span class="last money"><%= cartDetail.amount*cartDetail.price %></span>
                    </a>
                  </li>
                <% }) %>
              </ul>
              <ul class="list list_2">
                <li>
                  <a href="#">Subtotal
                    <span class="money"><%= totalCarts %></span>
                  </a>
                </li>
                <li>
                  <a href="#">Shipping
                    <span>Flat rate: $20.00</span>
                  </a>
                </li>
                <li>
                  <a href="#">Total
                    <span class="money"><%= allTotalCarts %></span>
                  </a>
                </li>
              </ul>
              <div class="creat_account">
                <input type="checkbox" id="f-option4" name="selector" />
                <label for="f-option4">Iâ€™ve read and accept the </label>
                <a href="#">terms & conditions*</a>
              </div>
              <a class="btn_3" href="#">Proceed to Paypal</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
  <!--================End Checkout Area =================-->

  <!--::footer_part start::-->
  <%- include ("share/footer.ejs") %>
  <!--::footer_part end::-->

  <!-- javascript-->
  <%- include ("share/scripts.ejs") %>
</body>

</html>